#!/usr/bin/env node

let loaded = false;

if (loaded) return process.kill();

const program = require('commander');
const debug = require('debug')('meta-yarn');

program
  .command('clean [--cwd some/rel/path]', 'delete the node_modules folder in meta and child repositories')
  .command('install [--cwd some/rel/path]', 'yarn install meta and child repositories')
  .command('link [--all]', 'yarn link child repositories where used within child and meta repositories')
  .parse(process.argv);

loaded = true;